{
  "manifest_version": 3,
  "name": "Vocabulary.com dictionary definition",
  "version": "1.0",
  "description": "Display popup with a definition of the selected word. Definition is taken from the Vocabulary.com site.",
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "host_permissions": [
	"https://www.vocabulary.com/dictionary/*"
  ],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
